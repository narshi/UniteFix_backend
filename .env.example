# UniteFix Backend â€” Environment Variables
# Copy this file to .env and fill in your values

# Database (PostgreSQL / Neon Serverless)
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_POOL_MAX=20

# Authentication
# Generate strong secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-strong-random-secret-key
JWT_REFRESH_SECRET=a-different-strong-random-secret-key

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_test_xxxx
RAZORPAY_KEY_SECRET=xxxx
RAZORPAY_WEBHOOK_SECRET=xxxx

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL=admin@unitefix.com

# Social Auth (OAuth 2.0)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Push Notifications
FCM_SERVER_KEY=

# Delhivery Shipping Integration
DELHIVERY_MODE=mock
DELHIVERY_API_KEY=
DELHIVERY_BASE_URL=https://track.delhivery.com/api

# Warehouse / Return Address
WAREHOUSE_ADDRESS=UniteFix Warehouse, Uttara Kannada
WAREHOUSE_PINCODE=581320
WAREHOUSE_CITY=Uttara Kannada
WAREHOUSE_STATE=Karnataka
WAREHOUSE_PHONE=9876543210
DEFAULT_WEIGHT_GRAMS=500
GST_NUMBER=

# SMS Provider (choose one)
# TWILIO_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE=+1234567890
MSG91_API_KEY=

# App
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5000
LOG_LEVEL=DEBUG
